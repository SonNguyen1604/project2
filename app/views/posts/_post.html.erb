<div class="post-preview">
  <%= link_to post do %>
    <h2 class="post-title"><%= post.title %></h2>
  <% end %>
  <h3 class="post-subtitle"><span><%= t ".tag" %></span>
    <% post.tags.each do |tag| %>
      <%= link_to tag.name, tag %>
    <% end %>
  </h3>
  <p class="post-meta"><%= t ".posted_by" %> <%= link_to post.user.name, post.user %>
    <%= time_ago_in_words post.created_at %> <%= t ".ago" %></p>
  <% if can? :delete, post %>
    <%= link_to t(".delete"), post, method: :delete,
      class: "post-meta delete-button", data: {confirm: t(".sure")} %>
  <% end %>
  <p class="post-meta"><%= post.comments.size %> <%= t ".comments" %></p>
</div>
<hr>
