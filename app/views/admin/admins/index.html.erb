<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="user-admin">
        <span><%= t ".total_users" %>: <%= @users.total_count %></span>.
        <%= link_to t(".posts"), admin_posts_url %>
        <p>
          <%= t ".download" %>:
          <%= link_to t(".csv"), users_path(format: "csv") %> |
          <%= link_to t(".excel"), users_path(format: "xls") %>
        </p>
        <%= paginate @users %>
        <table class="table table-hover">
          <thead>
            <th><%= t ".avatar" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".posts" %></th>
            <th><%= t ".status" %></th>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
