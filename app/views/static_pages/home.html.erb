<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1><%= t ".glog" %></h1>
          <hr class="small">
          <span class="subheading"><%= t ".share" %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-area">
        <%= render "shared/micropost_form", post: @post if user_signed_in? %>
      </div>
    </div>
  </div>
</div>
