<div class="cover-image">
  <%= image_tag "cover.jpg" %>
</div>
<div class="container">
  <div class="user-profile" user_id="<%= @user.id %>">
    <div class="row">
      <div class="col-md-4">
        <div class="user-infor">
          <div class="avatar-pro">
            <%= image_tag @user.avatar %>
          </div>
          <div class="pro-info">
            <h3><%= @user.name %></h3>
            <p><i><%= t ".joined" %>: <%= l @user.created_at,
              format: :date_month_year %></i></p>
            <p><%= t ".posted" %>:</p>
          </div>
          <div class="follow-form-div">
            <%= render "follow_form", user: @user if user_signed_in? %>
          </div>
          <div class="follow-info">
            <%= render "shared/stats", user: @user%>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <%= render "shared/error_messages" %>
        <div class="list-post" page="<%= @page %>" total ="<%= @posts.total_pages %>"
          id="view-check" view ="post">
          <%= render @posts %>
        </div>
        <div class="loading-img">
          <%= image_tag "loading.gif", id: "loading", class: "load-img" %>
        </div>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
